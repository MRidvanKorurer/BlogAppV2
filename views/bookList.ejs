<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Document</title>
    <%- include("./partials/navbar.ejs") %>
</head>
<body>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th style="width: 150px;">Resim</th>
                            <th>Başlık</th>
                            <th>Alt Başlık</th>
                            <th>Açıklama</th>
                            <th>Kategori</th>
                            <th style="width: 130px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% books.forEach(book => { %>
                        <tr>
                            <td><%= book._id %></td>
                            <td><img src="<%= book.resim %>" alt="Book Image" style="width: 100px;"></td>
                            <td><%= book.baslik %></td>
                            <td><%= book.altbaslik %></td>
                            <td><%= book.aciklama %></td>
                            <td><%= book.kategori %></td>
                            <td>
                                <a href="/book/edit/<%= book._id %>" class="btn btn-primary btn-sm">Düzenle</a>
                                <a href="/book/delete/<%= book._id %>" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
